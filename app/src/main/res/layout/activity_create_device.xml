<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="pritibits.com.prothesis.CreateDeviceActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Device"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deviceNameText"
        android:layout_marginTop="20dp"
        android:hint="Device Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deviceManufacturerText"
        android:layout_marginTop="20dp"
        android:hint="Device Manufacturer"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commTechSpinner"
        android:prompt="@string/comm_tech_prompt"
        android:layout_marginTop="20dp"
        android:entries="@array/comm_tech"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deviceTypeSpinner"
        android:layout_marginTop="20dp"
        android:prompt="@string/device_type_prompt"
        android:entries="@array/device_types"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_device"
        android:id="@+id/buttonAddDevice"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />


    <!-- this is the fragment that will change depending on the choice of device from the spinner -->
</LinearLayout>
